.row

  = nested_form_for(@poll) do |f|
    - if @poll.errors.any?
      #error_explanation
        %h2
          = pluralize(@poll.errors.count, "error")
          prohibited this poll from being saved:
        %ul
          - @poll.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :question
      %br/
      = f.text_area :question
    .field
      = f.fields_for :choices do |choice_form|
        = choice_form.text_field :content
      =f.link_to_add "Add a choice", :choices
    .actions
      = f.submit
